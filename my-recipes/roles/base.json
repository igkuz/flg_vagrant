{
  "name" : "base",
  "chef_type" : "role",
  "json_class" : "Chef::Role",
  "description" : "Base Role",
  "run_list": [
    "recipe[apt]",
    "recipe[mysql::server]",
    "recipe[sphinx]",
    "recipe[imagemagick]"
  ],
  "override_attributes" : {
    "mysql" : {
      "server_root_password" : "root"
    },
    "sphinx" : {
      "configure_flags" : [
        "--without-pgsql",
        "--with-mysql",
        "--without-stemmer"
      ]
    }
  }
}
